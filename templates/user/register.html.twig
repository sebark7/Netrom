{% extends 'base.html.twig' %}

{% block title %}Register User{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-6 text-center">Register User</h1>

    <div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-md">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

        <div class="space-y-1">
            {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
            {{ form_errors(form.email, {'attr': {'class': 'text-red-600 text-sm'}}) }}
        </div>

        <div class="space-y-1">
            {{ form_label(form.password, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.password, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
            {{ form_errors(form.password, {'attr': {'class': 'text-red-600 text-sm'}}) }}
        </div>

        <div>
            {{ form_widget(form.button, {'attr': {'class': 'w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500'}}) }}
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}

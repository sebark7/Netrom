{% extends 'base.html.twig' %}

{% block title %}Hello ExerciseController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>


    <div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-md">

        {% if form is defined  %}
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

        <div class="space-y-1">
            {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
            {{ form_errors(form.name, {'attr': {'class': 'text-red-600 text-sm'}}) }}
        </div>

        <div class="space-y-1">
            {{ form_label(form.type, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.type, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
            {{ form_errors(form.type, {'attr': {'class': 'text-red-600 text-sm'}}) }}
        </div>


        <div class="space-y-1">
            {{ form_label(form.muscleGroup, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.muscleGroup, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
            {{ form_errors(form.muscleGroup, {'attr': {'class': 'text-red-600 text-sm'}}) }}
        </div>

        <div>
            {{ form_widget(form.button, {'attr': {'class': 'w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500'}}) }}
        </div>

        {{ form_end(form) }}
        {% endif %}
    </div>


{% endblock %}

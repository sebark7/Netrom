{% extends 'base.html.twig' %}

{% block title %}Hello ExerciseController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>


    <div class="example-wrapper">

        <table class="min-w-full divide-y divide-gray-200">

            <thead class="bg-gray-800 text-white">
            <tr>
                <td class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Id</td>
                <td class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Name</td>
                <td class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Type</td>
            </tr>
            </thead>

            <tbody class="bg-white divide-y divide-gray-200">
            {% for exercise in exercises %}
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {{ exercise.id }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {{ exercise.name }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {{ exercise.type }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <a class="cursor-pointer"
                           href="{{ path('app_muscle_group_name', {'name': exercise.getMuscleGroup().getTipul()}) }}">
                            {{ exercise.getMuscleGroup().getTipul() }}
                        </a>

                    </td>


                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

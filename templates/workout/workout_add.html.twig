    <script>
        document
            .querySelectorAll('.add_item_link')
            .forEach(btn => {
                btn.addEventListener("click", addFormToCollection)
            });

        function addFormToCollection(e) {
            const collectionHolder = document.querySelector('.' + e.currentTarget.dataset.collectionHolderClass);

            const item = document.createElement('li');
            item.style.listStyle = "none";


            item.innerHTML = collectionHolder
                .dataset
                .prototype
                .replace(
                    /__name__/g,
                    collectionHolder.dataset.index
                );
            const horizonta = document.createElement('hr');

            if(collectionHolder.dataset.index >= 1)
            {
                horizonta.style.backgroundImage = 'linear-gradient(to right, rgba(0, 0, 0, 0), rgba(9, 84, 132), rgba(0, 0, 0, 0))';
                collectionHolder.appendChild(horizonta);
            }

            collectionHolder.appendChild(item);

            collectionHolder.dataset.index++;

            // add remove button
// Create the main div with class "row mb-3"
            const rowDiv = document.createElement('div');
            rowDiv.className = 'row mb-3';

            // Create the inner div with class "col-sm-10"
            const colDiv = document.createElement('div');
            colDiv.className = 'col-sm-10';

            // Create the button
            const button = document.createElement('button');
            button.type = 'button';
            button.className = 'add_item_link btn btn-outline-light btn-lg';
            button.setAttribute('data-collection-holder-class', 'exerciseLogs');
            button.textContent = 'Remove Button';

            // Append the button to the inner div
            colDiv.appendChild(button);

            // Append the inner div to the main div
            rowDiv.appendChild(colDiv);

            // Append the main div to the container div
            document.getElementById('container').appendChild(rowDiv);

            //////
            // const removeFormButton = document.createElement('button');
            // removeFormButton.innerText = 'Remove this Exercise Log';

            item.append(rowDiv);

            button.addEventListener('click', (e) => {
                e.preventDefault();
                // remove the li for the exerciseLog form
                item.remove();
                horizonta.remove();
                collectionHolder.dataset.index--;
            });
        }
    </script>

